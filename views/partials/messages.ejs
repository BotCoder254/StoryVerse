<% if(typeof errors != 'undefined'){ %>
    <% errors.forEach(function(error) { %>
        <div class="notification error animate-slide-in" role="alert">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex items-center justify-between p-4 rounded-lg bg-red-50 border-l-4 border-red-500">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-red-500 text-lg"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">
                                <%= error.msg %>
                            </p>
                        </div>
                    </div>
                    <button onclick="this.parentElement.remove()" class="text-red-500 hover:text-red-600 focus:outline-none">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    <% }); %>
<% } %>

