<!-- Hero Section -->
<div class="relative bg-white">
    <div class="max-w-7xl mx-auto">
        <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
            <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                <div class="sm:text-center lg:text-left">
                    <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                        <span class="block xl:inline">Share Your Stories</span>
                        <span class="block text-indigo-600 xl:inline">Inspire the World</span>
                    </h1>
                    <p class="mt-3 text-base text-gray-600 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                        Join our vibrant community of storytellers. Share your experiences, adventures, and creative moments that inspire others.
                    </p>
                    <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                        <div class="rounded-md shadow">
                            <a href="/users/register" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                                Get Started
                            </a>
                        </div>
                        <div class="mt-3 sm:mt-0 sm:ml-3">
                            <a href="/stories" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-indigo-50 hover:bg-indigo-100 md:py-4 md:text-lg md:px-10">
                                Explore Stories
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
        <lottie-player
            src="https://assets3.lottiefiles.com/packages/lf20_buhby0ug.json"
            background="transparent"
            speed="1"
            class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full"
            loop
            autoplay>
        </lottie-player>
    </div>
</div>

<!-- Features Section -->
<div class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Everything you need to share your story
            </h2>
            <p class="mt-4 text-xl text-gray-600">
                Create, share, and engage with a global community of storytellers
            </p>
        </div>

        <div class="mt-20">
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
                <!-- Feature 1 -->
                <div class="bg-white rounded-xl border border-gray-200 p-8 transform hover:-translate-y-1 transition-all duration-300">
                    <div class="w-12 h-12 bg-indigo-600 text-white flex items-center justify-center rounded-xl mb-6">
                        <i class="fas fa-clock text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">24-Hour Stories</h3>
                    <p class="text-gray-600">Share engaging stories that last for 24 hours, perfect for daily moments and updates.</p>
                </div>

                <!-- Feature 2 -->
                <div class="bg-white rounded-xl border border-gray-200 p-8 transform hover:-translate-y-1 transition-all duration-300">
                    <div class="w-12 h-12 bg-indigo-600 text-white flex items-center justify-center rounded-xl mb-6">
                        <i class="fas fa-chart-line text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Real-time Analytics</h3>
                    <p class="text-gray-600">Track your story's performance with detailed analytics and engagement metrics.</p>
                </div>

                <!-- Feature 3 -->
                <div class="bg-white rounded-xl border border-gray-200 p-8 transform hover:-translate-y-1 transition-all duration-300">
                    <div class="w-12 h-12 bg-indigo-600 text-white flex items-center justify-center rounded-xl mb-6">
                        <i class="fas fa-photo-video text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Rich Media Support</h3>
                    <p class="text-gray-600">Add photos and videos to make your stories more engaging and interactive.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Stories -->
<div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900">Featured Stories</h2>
            <p class="mt-4 text-xl text-gray-600">Discover inspiring stories from our community</p>
        </div>

        <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            <% const categories = ['adventure', 'travel', 'nature'];
               const titles = ['Adventure Awaits', 'Travel Tales', 'Nature Stories'];
               const descriptions = [
                   'Discover exciting adventures from around the world.',
                   'Experience different cultures through stories.',
                   'Connect with nature through storytelling.'
               ];
               for(let i = 0; i < 3; i++) { %>
                <div class="bg-white rounded-xl overflow-hidden shadow-lg transform hover:-translate-y-2 transition-all duration-300">
                    <div class="relative h-64">
                        <img src="https://source.unsplash.com/featured/800x600/?<%= categories[i] %>" 
                            alt="<%= titles[i] %>"
                            class="w-full h-full object-cover"
                        >
                        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                        <div class="absolute bottom-4 left-4 right-4">
                            <h3 class="text-xl font-bold text-white mb-2"><%= titles[i] %></h3>
                            <p class="text-gray-200 text-sm"><%= descriptions[i] %></p>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-2">
                                <img src="https://source.unsplash.com/random/40x40/?face" alt="Author" class="w-8 h-8 rounded-full">
                                <span class="text-sm text-gray-600">John Doe</span>
                            </div>
                            <span class="text-sm text-gray-500">2 hours ago</span>
                        </div>
                        <a href="/stories" class="mt-4 inline-flex items-center text-indigo-600 hover:text-indigo-700 font-medium">
                            Read More <i class="fas fa-arrow-right ml-2"></i>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

